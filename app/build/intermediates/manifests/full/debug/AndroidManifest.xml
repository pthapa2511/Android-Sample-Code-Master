<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.com.couponbenz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.app.testSample.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.testSample.homescreen.HomeScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.testSample.category.AllCategoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.testSample.store.GetAllStoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.testSample.offer.OfferDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.testSample.offer.GetCouponDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.testSample.search.SearchCoupons"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.testSample.offer.BankOffer"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.testSample.support.HelpAndSupportActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>