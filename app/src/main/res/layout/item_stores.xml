<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/rounded_corner">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image_view_store"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:background="@drawable/image_border"/>

    <com.app.testSample.utility.Widget.CustomTextView
        android:id="@+id/text_view_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/image_view_store"
        android:ellipsize="end"
        android:gravity="center|left"
        android:maxEms="15"
        android:maxLines="1"
        android:textColor="@color/category_text_color"
        android:textSize="15sp"
        android:textStyle="bold"
        app:customTextFont="@string/font_zona_pro" />

    <com.app.testSample.utility.Widget.CustomTextView
        android:id="@+id/text_view_category_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_view_store_name"
        android:layout_below="@id/text_view_store_name"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp"
        app:customTextFont="@string/font_zona_pro" />

</RelativeLayout>