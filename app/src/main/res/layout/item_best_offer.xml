<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/rounded_corner">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image_view_best_offer"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:background="@drawable/image_border"/>

    <com.app.testSample.utility.Widget.CustomTextView
        android:id="@+id/text_view_offer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/image_view_best_offer"
        android:gravity="center|left"
        android:textColor="@color/best_offer_title_color"
        android:textSize="12sp"
        android:textStyle="bold"
        app:customTextFont="@string/font_zona_pro" />

    <com.app.testSample.utility.Widget.CustomTextView
        android:id="@+id/text_view_offer_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_view_offer_title"
        android:layout_below="@id/text_view_offer_title"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center|left"
        android:maxLines="2"
        android:ems="14"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:ellipsize="end"
        app:customTextFont="@string/font_zona_pro" />

    <com.app.testSample.utility.Widget.CustomTextView
        android:id="@+id/text_view_expiry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center|left"
        android:layout_alignBottom="@id/text_view_offer_description"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:customTextFont="@string/font_zona_pro" />

</RelativeLayout>